<h1>Sign Up for an Appearance </h1>

<% if @appearance.errors.any? %>
  <%  @appearance.errors.full_messages.each do |message| %>
     <%= message %>
<% end %>
<% end %>



<%= form_for @appearance do |f| %>
<%= f.collection_select :guest_id, Guest.all, :id, :name %>
<%= f.collection_select :episode_id, Episode.all, :id, :number %>
<%= f.number_field :rating %>
<%= f.submit "Submit Your New Appearance" %>


    <% end %>