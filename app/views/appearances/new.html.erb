<h1>New Appearance Form</h1>


<%= form_for (@appearance) do |f| %>

    <%= f.label :rating %>
    <%= f.number_field :rating, max: 5, min: 1 %>
    <br/><br/>

    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, Episode.all, :id, :date %>
    <br/><br/>
    <%= f.label :guest_id %>
    <%= f.collection_select :guest_id, Guest.all, :id, :name %>
    <br/><br/>
    <%= f.submit "Create the Appearance!" %>
  <% end %>


  <% if @appearance.errors.any? %>
  <ul>
    <% @appearance.errors.full_messages.each do |e| %>
      <li style="color:red;"><%= e %></li>
    <% end %>
  </ul>
<% end %>
